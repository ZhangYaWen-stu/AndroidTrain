<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--radius四个圆角统一设置，也可以单独对某一个圆角设置。例：topLeftRadius-->
    <corners android:radius="8dp"/>
    <!--边框宽度width、颜色color-->
    <stroke android:width="1dp" android:color="#6DAE97" />
    <!--渐变的颜色设置开始到结束-->
    <gradient
        android:startColor="#6DAE97"
        android:centerColor="#6DAE97"
        android:endColor="#6DAE97"
        android:type="linear"
        />
</shape>
